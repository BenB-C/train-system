
<h1>Add a new stop</h1>
<form action="/stops" method="post">
  <div class="form-group">
    <label for="city_id">City</label>
    <select name="city_id" class="form_control">
      <% @cities.each do |city| %>
        <option value="<%= city.id %>"><%= city.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label for="train_id">Train</label>
    <select name="train_id" class="form_control">
      <% @trains.each do |train| %>
        <option value="<%= train.id %>"><%= train.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label for="time">Time</label>
    <select name="time" class="form_control">
      <% @times.each do |time| %>
        <option value="<%= time %>"><%= time %></option>
      <% end %>
    </select>
  </div>
  <button type="submit" class="btn">Add stop</button>
  <!-- <img class="page-image" src="/new_album.jpeg" alt=""> -->
</form>
